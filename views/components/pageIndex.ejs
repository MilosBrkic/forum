                    <a class="btn btn-secondary mb-1" href="/threads/<%= posts[0].thread_id %>/page-<%= index %>"><%= index %></a>
                <% }
            } else { 
                if(index < page) {
                    index = page -1;
                    if(index > lastPage - 2) index = lastPage - 2;
                    %>
                ...<% } %>
