                    <a class="btn btn-info mb-1" href="/threads/<%= posts[0].thread_id %>/page-<%= index %>"><%= index %></a>
                <% }
                if(index > page) {
                    index = lastPage - 2; %>
                    ...                                               
            <% }} %>                                                             
        <% } %>    
    <% }
