<%- include ('./header') %>

<div class="container">

    <% if(currentUser) { %>
    <a class="btn btn-secondary mb-1" href="/threads/new">Nova tema</a>
    <% } %>

    <table class="table table-sm text-white">
        <thead>
            <tr>
              <th scope="col" style="width: 65%">Naziv teme</th>
              <th scope="col" style="width: 15%">Broj postova</th>
              <th scope="col" style="width: 20%">Poslednji post</th>
            </tr>
        </thead>
        <tbody>
        <%
        if(threads)
        threads.forEach(function(thread) { %>
            <tr>
                <td><h5><a class="text-white" href="threads/<%=thread.id %>"><%=thread.title %></a></h5></td>
                <td><%= thread.postcount %></td>
                <td><%= new Intl.DateTimeFormat('en-GB', { year: 'numeric', month: 'short', day: '2-digit', hour: 'numeric', minute: 'numeric'}).format(thread.lastpost) %></td>
            </tr>
        <% });  %>
        </tbody>     
    </table>
</div>



<%- include ('./footer') %>